{% extends 'base.html.twig' %}

{% block title %}
	{{title}}
{% endblock %}

{% block body %}
	<div class="container mx-auto">
		<h1>{{title}}</h1>

		{% include 'components/_searchData.html.twig' with {form:form ?? null} only %}

		{# {% if allCategories is defined %}
				  {% include "components/_dropdown.html.twig" with {options: allCategories} only %}
				{% endif %} #}


		<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-2">
			{% for post in posts %}
				{% include 'components/_card.html.twig' with {result:result ?? null} %}
			{% endfor %}
			<div class="navigation flex justify-center mb-8"></div>
		</div>
		<div class="navigation flex justify-center mb-8">
			{{ knp_pagination_render(posts) }}
		</div>
	</div>


{% endblock %}
